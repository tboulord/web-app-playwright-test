{
  "name": "peithotest-playwright",
  "version": "0.1.0",
  "private": true,
  "description": "Playwright UI test harness for the private PeithoTest application.",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --project=ui",
    "test:ui:smoke": "playwright test --project=ui-smoke",
    "test:a11y": "playwright test --project=a11y",
    "test:api": "playwright test --project=api",
    "test:report": "playwright show-report",
    "coverage:merge": "nyc merge ./coverage ./coverage/coverage-merged.json",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "1.41.2",
    "@types/node": "^20.11.17",
    "dotenv": "^16.3.1",
    "nyc": "^17.1.0",
    "prettier": "^3.2.5",
    "zod": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
