{
  "name": "peithotest-playwright",
  "version": "0.1.0",
  "private": true,
  "description": "Playwright UI and API test harness for the private PeithoTest application.",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --project=ui",
    "test:api": "playwright test --project=api",
    "test:report": "playwright show-report",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.17",
    "dotenv": "^16.3.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
