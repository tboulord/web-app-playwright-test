# Base URL used by UI tests
# Use http://frontend:3000 when running inside the PeithoTest docker-compose network.
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Base URL used by API tests (set to http://backend:8000/api/v1 when not sharing the host network)
PLAYWRIGHT_API_URL=http://localhost:8000/api/v1

# Optional expect timeout override (ms)
# PLAYWRIGHT_EXPECT_TIMEOUT=10000

# Health check probed during global setup (set to http://backend:8000/health on the docker network)
# PLAYWRIGHT_HEALTHCHECK_URL=http://localhost:8000/health
# Number of attempts and delay between health checks
# PLAYWRIGHT_HEALTH_MAX_ATTEMPTS=20
# PLAYWRIGHT_HEALTH_INTERVAL_MS=1000

# Mock chatbot URL used when seeding default connectors
# PLAYWRIGHT_MOCKCHAT_URL=http://localhost:8080
